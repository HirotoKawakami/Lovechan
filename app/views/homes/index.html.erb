<div class="content">
  <section class="top">
    <div>Top</div>
  </section>
  <section class="story">
    <div class="story-title"><%= image_tag ("/images/STORY.png") %></div>
    <div class="story-content">
      <div class="story-content-1"><%= image_tag("/images/STORY1.png") %></div>
      <div class="story-content-2"><%= image_tag("/images/STORY2-01.png") %></div>
      <div class="story-content-3"><%= image_tag("/images/STORY3-01.png") %></div>
      <div class="story-content-4"><%= image_tag("/images/STORY4-01.png") %></div>
      <div class="story-content-5"><%= image_tag("/images/虹.png") %></div>
    </div>
  </section>
  <section class="profile">
    <div class="profile-title"><%= image_tag("/images/profile.png") %></div>
    <div class="profile-content">
      <div class="profile-content-image"><%= image_tag("/images/profile3-01.png") %></div>
      <div class="profile-content-description"><%= image_tag("/images/profile_1_アートボード 1.png") %></div>
    </div>
  </section>
  <section class="goods">
    <div class="goods-bg"><%= image_tag("/images/背景２.png") %></div>
    <div class="cloud"><%= image_tag("/images/twitter_cloud1.png") %></div>
    <div class="cloud-2"><%= image_tag("/images/twitter_cloud1.png") %></div>
    <div class="goods-image"><%= image_tag("/images/goods_1_アートボード 1.png") %><%= image_tag("/images/goods_logo.png", class: "good-logo") %></div>
  </section>
  <section class="twitter">
    <div class="twitter-title"><%= image_tag("/images/Twitter.png") %></div>
  </section>
  <section class="contact">
    <div class="contact-title"><%= image_tag("/images/お問合せ.png") %></div>
    <div class="contact-link"><%= link_to("お問い合わせはこちら", new_inquiry_path) %></div>
  </section>
</div>
<div id="page_top"><a href="#"></a></div>

<script>
$(function() {
  var pagetop = $('#page_top');    
  pagetop.hide();
  $(window).scroll(function () {
      if ($(this).scrollTop() > 100) {  //100pxスクロールしたら表示
          pagetop.fadeIn();
      } else {
          pagetop.fadeOut();
      }
  });
  pagetop.click(function () {
      $('body,html').animate({
          scrollTop: 0
      }, 500); //0.5秒かけてトップへ移動
      return false;
  });
});
</script>
