<div class="inquiry">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@inquiry, url:inquiries_path) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :email %>
      <%= f.text_field :email, placeholder: "contact@example.com", class: 'form-control' %>

      <%= f.label :message %>
      <%= f.text_area :message, class: 'form-control' %>

      <%= f.submit "そうしん",data: { disable_with: "そうしんちゅう..." }, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
